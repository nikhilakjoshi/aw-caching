# Example environment configuration for QnA Caching Module
# Copy this to .env and modify values for your environment

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/database_name

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Cache Configuration
QA_CACHE_SIMILARITY_THRESHOLD=0.85
QA_CACHE_EMBEDDING_MODEL=text-embedding-3-small
QA_CACHE_CREATED_BY=api

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true
FASTAPI_LOG_LEVEL=info

# Optional: PostgreSQL Vector Extension
# Set to true if you have pgvector extension installed
USE_PGVECTOR=false

# Optional: Embedding Cache Settings
EMBEDDING_CACHE_SIZE=1000
EMBEDDING_BATCH_SIZE=100

# Development Settings
DEBUG=false
LOG_LEVEL=INFO